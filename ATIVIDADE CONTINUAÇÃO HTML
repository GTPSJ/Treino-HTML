<!-- tabela de fundo colorido, mesclagem de coluna e mesclagem de campo -->

<!-- iniciando tabela, adicionando bordas e estabelecendo dimensões fixas da tabela -->

    <table BORDER="1" WIDTH="600" HEIGHT="300">
        <tr>
        <!-- mesclagem dos campos da linha -->
            <TD COLSPAN="2">ABC</TD>
            <tD COLSPAN="2">DEF </td>

        </tr>
        <tr>
        <!-- mesclagem dos campos da coluna, e adicionado cor de fundo nos campos respectivamente -->
        
            <TD rowspan="2" style="background-color:rgb(243, 9, 9);">123(FUNDO VERMELHO)</TD>
            <td style="background-color:rgb(245, 241, 10);">A1 (FUNDO AMARELO) </td>
            <td style="background-color:rgb(13, 162, 231);">B1(FUNDO AZUL) </td>
            <td ROWSPAN="2" style="background-color:rgb(243, 9, 9);">456(FUNDO VERMELHO) </td>
            
        </tr>
        <TR>
        <!-- adicionando cor de fundo nos campos -->
            <TD style="background-color:rgb(13, 162, 231);">C1(FUNDO AZUL)</TD>
            <TD style="background-color:rgb(245, 241, 10);">D1(FUNDO AMARELO)</TD>

            

        </TR>
        <TR>
            <TD>H1</TD>
            <TD>H2</TD>
            <!-- mesclagem dos campos da linha -->
            <TD COLSPAN="2"> H123 </TD>
        </TR>
    </table>
     <!-- fim da tabela -->
